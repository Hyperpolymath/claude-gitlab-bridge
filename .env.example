# Claude GitLab Bridge - Environment Configuration
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# GitLab Configuration
# =============================================================================

# GitLab Personal Access Token or Project Token
# Required scopes: api, read_repository, write_repository
# Create at: https://gitlab.com/-/profile/personal_access_tokens
GITLAB_TOKEN=glpat-xxxxxxxxxxxxxxxxxxxx

# GitLab Instance URL
# Use https://gitlab.com for GitLab.com
# Use your self-hosted URL for self-hosted instances
GITLAB_URL=https://gitlab.com

# GitLab Project ID (optional, for single-project mode)
# Find at: Project → Settings → General
# GITLAB_PROJECT_ID=12345678

# =============================================================================
# Claude (Anthropic) Configuration
# =============================================================================

# Anthropic API Key
# Get your key at: https://console.anthropic.com/account/keys
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxx

# Claude Model (optional)
# Options: claude-3-opus-20240229, claude-3-sonnet-20240229, claude-3-haiku-20240307
# CLAUDE_MODEL=claude-3-sonnet-20240229

# Claude Max Tokens (optional)
# CLAUDE_MAX_TOKENS=4096

# =============================================================================
# Webhook Configuration
# =============================================================================

# Webhook Secret for validating GitLab webhooks
# Generate a random string: openssl rand -hex 32
WEBHOOK_SECRET=your-webhook-secret-here

# =============================================================================
# Application Configuration
# =============================================================================

# Server Port
PORT=3000

# Node Environment
# Options: development, production, test
NODE_ENV=development

# Log Level
# Options: error, warn, info, debug, trace
LOG_LEVEL=info

# =============================================================================
# Optional Features
# =============================================================================

# Enable/disable features
# ENABLE_AUTO_REVIEW=true
# ENABLE_ISSUE_ANALYSIS=true
# ENABLE_BRANCH_CREATION=true

# Rate Limiting
# MAX_REQUESTS_PER_MINUTE=60
# MAX_REQUESTS_PER_HOUR=1000

# Caching
# CACHE_TTL_SECONDS=3600
# CACHE_MAX_SIZE=100

# =============================================================================
# Database (if using persistent storage)
# =============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/claude_gitlab_bridge

# =============================================================================
# Security
# =============================================================================

# Session Secret (for auth if needed)
# SESSION_SECRET=your-session-secret-here

# CORS Origins (comma-separated)
# CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# =============================================================================
# Development Only
# =============================================================================

# Enable debug mode
# DEBUG=true

# Mock external APIs for testing
# MOCK_GITLAB_API=false
# MOCK_CLAUDE_API=false

# =============================================================================
# End of Configuration
# =============================================================================

# Notes:
# 1. Copy this file to .env
# 2. Replace all placeholder values
# 3. Never commit .env to version control
# 4. Rotate secrets regularly (every 90 days)
# 5. Use different tokens for different environments
